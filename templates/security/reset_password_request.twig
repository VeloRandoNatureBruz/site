{% extends 'base.html.twig' %}

{% block title %}Connexion |
	{{ parent() }}
{% endblock %}
{# La page de login #}
{% block body %}

	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}


		<div class="row title__login">
			<div class="col-auto form-login-fond-noir">
				<h1 class="h3 mb-3 font-weight-normal">Connectez-vous
				</h1>
				<label for="inputUsername">Pseudo</label>
				<input type="text" value="{{ last_username }}" name="identifier" id="identifier" class="form-control" required autofocus>
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="placement-button-envoyer-login">
					<button class="btn btn-lg button-adherez-login btn-block button-style-envoyer" type="submit">
						Se connecter
					</button>
				</div>
				<a class="button-style-login" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
			</div>


		</div>
		<h2 class="text-center mt-5">Nouveau sur le site ?</h2>
		<div class=" d-flex justify-content-center">

			<a href="{{ path('adhesion') }}" class="btn btn-lg button-adherez-login m-3">
				Adhérer à l'association
			</a>
		</div>
	</form>

{% endblock %}

{% block body %}
    {# Page de demande de réinitialisation de mot de passe de secours (sans lien via mail) #}

    <div class=" global-adhesion container-fluid">

        <div class="adhesion-fond-noir m-5 col-lg-5 col-md-12 col-sm-12 size">
            <div class="justify-content-center">
        
                <article id="texteAdhésion">
                    <h1 class="text-accueil">Vous souhaitez réinitialiser votre mot de passe car vous l'avez oublié ?</h1>
                    <div class="texte-adhesion">
                        <p class=" text-center">Pas de problème :) , pour cela contacter :</p>
                        <ul>
                            <li class="list-unstyled text-center">- par téléphone : {{ president.prenom}} au {{ president.telephone }}</li>
                            <li class="list-unstyled text-center">- par mail : vrnb2020@velorandonaturebruz.fr</li>
                        </ul>
                    </div>
                </article>
            </div>
        </div>
    </div>

{% endblock %}
