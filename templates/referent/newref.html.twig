{% extends 'base.html.twig' %}
{% block title %}Création d'un Référent | {{ parent() }}{% endblock %}
{# la page de la liste des référents #}

{% block body %}
    {% if is_granted("ROLE_ADMIN") %}

                {{ form_start(form) }}
        <div class="container-fluid">
            <div class="main__partenaire">
                <div class="form__partenaire">
                    <div class="title_form col-12">
                        <h1 >Création d'un Référent</h1>
                    </div>
                    <div class="centre_form_referent">
                        <div class="col-lg-6 test-color-size3">
                            <div class="col-lg-4 test-color-size4">
                                <label>Nouveau Référent : </label>
                                <p>{{ form_widget(form.nom) }}</p>
                            </div>
                            <div class="col-lg-2 color-size-1">
                                <label>Ordre : </label>
                                <p>{{ form_widget(form.ordre) }}</p>
                            </div>
                        </div>
                    </div>
                        <div class="col-lg-6 col-xs-12 test-color-size2">
                            <p>L'ordre gère l'affichage des Référents.</p>
                            <div>
                                <strong>1{</strong> Président<br>
                                <strong>2{</strong> Trésorier et Secrétaire<br>
                                <strong>3{</strong> Autres Référents<br>
                                <strong>4{</strong> Adhérents
                            </div>
                        </div>

                    <div class="col-lg-12 button-enregistrer-new-referent">
                        <div class="d-flex justify-content-center">
                            <button class="mb-5 mt-2 btn btn-primary btn btn-lg">{{ button_label|default('Enregistrer') }}</button>
                            <a href="{{ path('referent') }}" class="mb-5 mt-2 btn btn-primary btn btn-lg espace-button-referent">Retour</a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    {% endif %}
{% endblock %}