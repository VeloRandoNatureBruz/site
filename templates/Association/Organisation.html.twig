{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Organisation
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/association/style.css') }}"/>
	<link rel="stylesheet" href="{{ asset('css/association/orgchart.css') }}"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
		  crossorigin="anonymous">
{% endblock %}

{# La page organisation bureau #}
{% block body %}

	<div class="container text-center">
		<h1 class="mt mb">Organisation</h1>

		<div class="container text-center">
			<div class="row justify-content-center">
				{% for user in users %}
					{% if user.bureau is not null and user.bureau.getId() == 1 %}
				<div class="col-md-6 mb-3">

						<div class="card mb-3">
							<div class="carte-entete membresBureau">
								<h2>{{ user.bureau.getNom() }}</h2>
							</div>
							<div class="card-body">
								<h4>{{ user.prenom }}&nbsp{{ user.nom }}</h4>
							</div>
						</div>
				</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>

	<br>

	<div class="container text-center">
		<div class="row justify-content-center">
			{% for user in users %}
				{% if user.bureau is not null and user.bureau.getId() != 1 and user.bureau.getNom() != 'Adhérent'%}
					<div class="col-md-6 mb-3">
						<!-- Utilisation de Bootstrap pour diviser en deux colonnes -->
						<div class="card mb-3">
							<div class="carte-entete membresBureau">
								<h2>{{ user.bureau.getNom() }}</h2>
							</div>
							<div class="card-body">
								<h4>{{ user.prenom }}&nbsp{{ user.nom }}</h4>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>

	<div class="EDBloc mt-5 col-10 m-auto">
		<p class="text-center">Equipe de Développement :</p>
		<div class="equipeDeveloppement">
			{# Les noms des personnes ayant participé au développement du site sont en dur pour qu'ils restent affichés même en cas de suppression du profil par l'admin #}
			<ul class="margin-bottom d-flex flex-row m-l-5">
				<li class="margin-right">Florian BARON</li>
				<li class="margin-right">Maxime THUAULT</li>
				<li class="margin-right">Florence CORMANT</li>
				<li class="margin-right">Christophe LECLERE</li>
				<li class="margin-right">Antoine MARTIN VAUFREY</li>
				<li class="margin-right">Vincent BLANCHET</li>
			</ul>
		</div>
	</div>


{% endblock %}

{% block scripts %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="{{ asset('js/jquery.orgchart.js') }}"></script>
{% endblock %}
