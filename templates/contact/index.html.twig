{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Contact
{% endblock %}
{# la page contact #}
{% block body %}

	<div class="container">
		<div class="form_contact col-20">
			<div class="title_contact col-12">
				<h1>Nous contacter</h1>
			</div>
			<div
				class="centre_form_contact col-12">
				{# on importe les champs du formulaire #}

				{{ form_start(contactForm) }}
				<p>
					Nom et Pr√©nom :
					{{ form_widget(contactForm.nom) }}</p>
				<p>
					Email :
					{{ form_widget(contactForm.emailContact) }}</p>
				<p>
					Message :
					{{ form_widget(contactForm.message) }}</p>
			</div>
			<div class="bas_form_contact col-12">
				<div class="bas_form_contact1">
					<p>{{ form_widget(contactForm.envoyer) }}</p>
