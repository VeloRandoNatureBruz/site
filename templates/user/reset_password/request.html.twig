{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réinitialiser mon mot de passe{% endblock %}
{# page de reinitialisation de mdp #}

{% block body %}
    {# formulaire pour changer le mot de passe #}
    <div class="container">
        <div class="form_password_forgotten">
            <div class="title_form col-12">
                <h1>Mot de passe oublié </h1>
            </div>
            <form method="post">
                <div class="row justify-content-center mt-5">
                    <label for="mail"><h4>Adresse mail  &ensp;</h4></label>
                    <input   type="email" id="mail" name="mail"/>
                </div>
                <div class="row justify-content-center m-1">
                    <p class="lead">
                        Saisissez votre adresse mail et nous vous enverrons vers un lien pour réinitialiser votre mot de passe.
                    </p>
                </div>
                <div class="bas_form_password_forgotten col-12">
                    <button type="submit" class="butonPersonnalise">Envoyer un lien de réinitialisation</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}